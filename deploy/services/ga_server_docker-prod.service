[Unit]
Description=Genshin Academy Server Docker PROD Service
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
User=academy
RemainAfterExit=yes
WorkingDirectory=/var/www/genshinacademy/prod/server
ExecStart=/usr/bin/docker compose pull
ExecStart=/usr/bin/docker compose -f docker-compose.prod.yaml --project-name ga_server-prod --env-file prod.env up -d
ExecStop=/usr/bin/docker compose down

[Install]
WantedBy=multi-user.target
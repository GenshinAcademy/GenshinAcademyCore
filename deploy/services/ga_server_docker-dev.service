[Unit]
Description=Genshin Academy Server Docker DEV Service
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
User=academy
RemainAfterExit=yes
WorkingDirectory=/var/www/genshinacademy/dev/server
ExecStart=/usr/bin/docker compose pull
ExecStart=/usr/bin/docker compose -f docker-compose.dev.yaml --project-name ga_server-dev --env-file dev.env up -d
ExecStop=/usr/bin/docker compose down

[Install]
WantedBy=multi-user.target
server {
    if ($host = academy-project.info) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    listen 80;
    server_name genshin-dev.academy-project.info;
    return 404; # managed by Certbot
}

server {
    # Redirect to HTTPS and remove www
    if ($host ~* ^www\.(?<domain>.+)$) {
        return 301 https://$domain$request_uri;
    }

    listen 443 ssl;
    listen [::]:443 ssl;

    ssl_certificate /etc/letsencrypt/live/genshin-dev.academy-project.info/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/genshin-dev.academy-project.info/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    root /home/academy/GenshinAcademy/dev/site;
    index index.html;

    server_name genshin-dev.academy-project.info;

    error_page 404 /index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    location /api {
        proxy_pass http://localhost:8301;
    }

    # Cache static files for 30 days
    location ~* \.(css|js|png|jpe?g|gif|svg|ico)$ {
        expires 30d;
        add_header Cache-Control "public, max-age=2592000";
    }

    error_log  /var/log/nginx/nginx-error.log;
    access_log /var/log/nginx/nginx-access.log;
}